generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User  { 
  id          String     @id @default(cuid())
  name        String?
  email       String     @unique
  password    String
  createdAt   DateTime   @default(now())
  isOnboarded Boolean    @default(false)
  onboarding  Onboarding? @relation("UserOnboarding") // âœ… This was missing
}

model Onboarding {
  id          String   @id @default(cuid())
  avatarUrl   String?
  name        String
  description String
  location    String
  userId      String   @unique
  user        User     @relation("UserOnboarding", fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
